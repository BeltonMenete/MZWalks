@using MZWalks.UI.Models.DTOs
@model List<RegionDto>
@{
    ViewData["Title"] = "Regions";
}

<h1>Regions</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Region</a>
</p>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
    <tr>
        <th>Id</th>
        <th>Code</th>
        <th>Name</th>
        <th>URL</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var region in Model)
    {
        <tr>
            <td>@region.Id</td>
            <td>@region.Code</td>
            <td>@region.Name</td>
            <td>@region.RegionImageURL</td>
            <td>
                <a class="btn btn-sm btn-warning" asp-action="Update" asp-route-id="@region.Id">Edit</a>
                <form asp-action="Delete" asp-route-id="@region.Id" method="post" style="display:inline" onsubmit="return confirm('Are you sure you want to delete this region?');">
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>